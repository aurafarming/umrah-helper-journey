
{
  "manifest_version": 2,
  "name": "Umrah Companion",
  "version": "1.0.0",
  "description": "A helpful companion for planning and performing Umrah",
  "icons": {
    "48": "public/icon-48.png",
    "96": "public/icon-96.png"
  },
  "browser_action": {
    "default_icon": {
      "48": "public/icon-48.png",
      "96": "public/icon-96.png"
    },
    "default_title": "Umrah Companion",
    "default_popup": "extension/popup.html"
  },
  "permissions": [
    "storage",
    "geolocation",
    "*://*.openweathermap.org/*"
  ],
  "background": {
    "scripts": ["extension/background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "umrah-companion@example.com"
    }
  }
}
